<div class="bg-white shadow-sm rounded-lg w-full max-w-xl h-fit text-center p-4 sm:p-5 md:p-6 my-4 mx-2 sm:mx-4 md:mx-6 lg:mx-8 border border-gray-200">
  <h2>
    <span class="text-sm sm:text-base md:text-lg font-bold"><%= t(".resend_unlock_instructions") %></span>
  </h2>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "flex flex-col gap-6 mt-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full">
      <%= f.label :email, class: "block text-left text-sm sm:text-base md:text-lg font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <div class="w-full">
      <%= f.submit t(".resend_unlock_instructions"), class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200" %>
    </div>
  <% end %>
  <div class="mt-4 text-sm sm:text-base md:text-lg">
    <%= render "devise/shared/links" %>
  </div>
</div>

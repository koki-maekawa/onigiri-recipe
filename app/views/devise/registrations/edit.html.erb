<div class="bg-white shadow-sm rounded-lg w-full max-w-2xl mx-auto p-6 sm:p-7 md:p-8 my-4 border border-gray-200">
  <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-center mb-6">
    <%= t(".title", resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: "registrations.edit.title")) %>
  </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full">
      <%= f.label :email, class: "block text-left text-sm sm:text-base font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-3 text-sm text-yellow-800">
        <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
      </div>
    <% end %>
    <div class="w-full">
      <%= f.label :password, class: "block text-left text-sm sm:text-base font-medium text-gray-700 mb-2" %>
      <p class="text-xs sm:text-sm text-gray-500 mb-2">
        <%= t(".leave_blank_if_you_don_t_want_to_change_it") %>
      </p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <% if @minimum_password_length %>
        <p class="text-xs sm:text-sm text-gray-500 mt-1">
          <%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %>
        </p>
      <% end %>
    </div>
    <div class="w-full">
      <%= f.label :password_confirmation, class: "block text-left text-sm sm:text-base font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <div class="w-full">
      <%= f.label :current_password, class: "block text-left text-sm sm:text-base font-medium text-gray-700 mb-2" %>
      <p class="text-xs sm:text-sm text-gray-500 mb-2">
        <%= t(".we_need_your_current_password_to_confirm_your_changes") %>
      </p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <div class="w-full">
      <%= f.submit t(".update"), class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200" %>
    </div>
  <% end %>
  <div class="mt-8 pt-6 border-t border-gray-200">
    <h3 class="text-lg font-semibold text-red-600 mb-4"><%= t(".cancel_my_account") %></h3>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <p class="text-sm text-red-700 mb-3"><%= t(".unhappy") %></p>
      <%= button_to t(".cancel_my_account"), registration_path(resource_name),
          data: { confirm: t(".are_you_sure"), turbo_confirm: t(".are_you_sure") },
          method: :delete,
          class: "py-2 px-4 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md transition-colors duration-200" %>
    </div>
  </div>
  <div class="mt-6 text-center">
    <%= link_to t("devise.shared.links.back"), :back, class: "text-blue-600 hover:text-blue-800 underline" %>
  </div>
</div>

<%= paginator.render do -%>
  <nav class="pagination flex justify-center mt-8" role="navigation" aria-label="ページネーション">
    <ul class="flex items-center -space-x-px shadow-sm rounded-lg overflow-hidden border border-gray-200">
      <%= prev_page_tag unless current_page.first? %>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
      <% unless current_page.out_of_range? %>
        <%= next_page_tag unless current_page.last? %>
      <% end %>
    </ul>
  </nav>
<% end -%>

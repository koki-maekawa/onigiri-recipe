<% if page.current? %>
  <li class="page current">
    <%= link_to_if page.current?, page, url, {
        remote: remote,
        rel: page.rel,
        class: "flex items-center justify-center w-10 h-10 bg-green-600 border border-green-600 text-white font-semibold text-sm shadow-sm cursor-default"
      } %>
  </li>
<% else %>
  <li class="page">
    <%= link_to_unless page.current?, page, url, {
        remote: remote,
        rel: page.rel,
        class: "flex items-center justify-center w-10 h-10 bg-white border border-gray-300 text-gray-700 hover:bg-green-50 hover:text-green-600 hover:border-green-300 transition-all duration-200 font-medium text-sm"
      } %>
  </li>
<% end %>

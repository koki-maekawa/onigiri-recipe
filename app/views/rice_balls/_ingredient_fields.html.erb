<div class="flex w-full gap-2 mb-3 nested-fields" data-ingredient-forms-target="ingredientFields">
  <%= f.text_field :name,
        class: "flex-grow min-w-0 px-2 sm:px-3 py-1.5 sm:py-2 text-gray-900 bg-white border border-gray-300 rounded-md shadow-sm
                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm sm:text-base",
        placeholder: t("defaults.ingredient_name_placeholder") %>
  <%= f.text_field :amount,
        class: "w-20 sm:w-28 px-2 sm:px-3 py-1.5 sm:py-2 text-gray-900 bg-white border border-gray-300 rounded-md shadow-sm
                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm sm:text-base",
        placeholder: t("defaults.ingredient_amount_placeholder") %>
  <%= button_tag type: "button",
        data: { action: "click->ingredient-forms#removeForm" },
        class: "flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-red-600 hover:bg-red-700 text-white rounded-md transition-colors flex items-center justify-center" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
         stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
    </svg>
  <% end %>
  <%= f.hidden_field :_destroy %>
</div>

<div class="bg-white shadow-sm hover:shadow-md transition-shadow border border-gray-200 hover:border-green-500 rounded-lg overflow-hidden relative group">
  <%= link_to "", rice_ball_path(rice_ball), data: { turbo_frame: "_top" }, class: "absolute top-0 left-0 right-0 bottom-0 z-10" %>
  <figure class="relative overflow-hidden">
    <% if rice_ball.image.attached? %>
      <%= image_tag rice_ball.image.variant(:index), class: "w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300" %>
    <% else %>
      <%= image_tag "onigiri.png", class: "w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300" %>
    <% end %>
  </figure>
  <div class="flex flex-col p-3 space-y-2">
    <h2 class="truncate">
      <span class="text-base sm:text-lg font-bold text-gray-900">
        <%= rice_ball.title %>
      </span>
    </h2>
  </div>
</div>

  <ul class="space-y-2">
    <li>
      <%= link_to rice_balls_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-md transition-colors duration-200 #{current_page?(rice_balls_path) || current_page?(root_path) ? 'bg-green-100 text-green-800 border border-green-200' : 'text-gray-700 hover:bg-gray-100 hover:text-gray-900'}" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 flex-shrink-0"
          fill="currentColor"
